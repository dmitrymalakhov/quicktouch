= content_for :style do
	= stylesheet_link_tag :portfolio, :media => 'screen'


- @applications.each do |application|
	%table
		%tr
			%td
				.image= image_tag application.photo.url()

			%td
				.title= application.title
				.description= application.description
				.links
					%ul
						- if !application.android_link.blank?
							%li= link_to "Android", application.android_link, :target => "_blank"
						- if !application.ios_link.blank?
							%li= link_to "iOS", application.ios_link, :target => "_blank"
						- if !application.web_link.blank?
							%li= link_to "WEB", application.web_link, :target => "_blank"
