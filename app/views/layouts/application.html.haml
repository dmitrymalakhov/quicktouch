%html
	%head
		= csrf_meta_tags		
		= stylesheet_link_tag "http://fonts.googleapis.com/css?family=PT+Sans:400,700,400italic,700italic&subset=latin,cyrillic,latin-ext,cyrillic-ext"
		= stylesheet_link_tag :common, :media => 'screen'
		/ = javascript_include_tag "jquery-1.9.0.min"
		= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"
		= javascript_include_tag "jquery.prettyPhoto"
		= javascript_include_tag "jquery.cookie"
		= javascript_include_tag "common"
		= javascript_include_tag "popup"
		
		%title Quick Touch - разработка мобильных приложений Android, iOS,  Windows Phone
		
		= yield :scripts
		= yield :style

		= stylesheet_link_tag :prettyPhoto, :media => 'screen'
	%body
		:javascript
			var _gaq = _gaq || [];
			_gaq.push(['_setAccount', 'UA-36932968-1']);
			_gaq.push(['_trackPageview']);

			(function() {
				var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
				ga.src = ('https:' == document.location.protocol ? 'https://' : 'http://') + 'stats.g.doubleclick.net/dc.js';
				var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
			})();
		.wrapper
			.header
				.logo
					= link_to logo, root_path
				.routes
					.locale
						= link_to_unless I18n.locale == :en, "english version ", locale: :en
						|
						= link_to_unless I18n.locale == :ru, " русская версия", locale: :ru
					.nav
						%ul
							%li= link_to t('nav_home'), root_path
							%li= link_to t('nav_client'), client_path
							%li= link_to t('nav_partner'), partner_path
							%li= link_to t('nav_works'), portfolio_path
							%li= link_to t('nav_contact'), contact_path
					= yield :promo

			.content
				= yield
			.footer
				.label
					= link_to image_tag("label.png", :alt => "QuickTouch"), root_path
				.contact
					%table
						%tr
							%td.paragraph.yellow.padding-left.small email:
							%td nikita.volkov@quicktouch.ru
						%tr
							%td.paragraph.yellow.padding-left.small= t('phone')
							%td 8 952 444 44 55
						%tr
							%td.paragraph.yellow.padding-left.small= t('adress')
							%td г. Нижний Новгород, БЦ "Столица Нижний", ул. Горького, д.117, офис 403
						

				.slogan
			.copyright
				Copyright QuickTouch LLC, 2013
%div#dialog-overlay
%div#dialog-box
	= link_to image_tag("qt_delivery_promo.jpg", :alt => "Приложение доставки за 500р"), product_path(2)


