= content_for :style do
	= stylesheet_link_tag :portfolio, :media => 'screen'
= content_for :promo do
	.promo.paragraph.gray
		%ul.padding-left.small
			%li.promo_title.text-color-title
				= t('portfolio_promo_title')
			%li.promo_content.text-color-content
				= t('portfolio_promo_content')
.items
	- @applications.each do |application|
		.item
			.image= link_to image_tag(application.photo.url()), :controller => "application", :action => "appview", :id => application.id
			.title= application.title
				