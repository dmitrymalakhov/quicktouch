= form_for @worker, :html => { :multipart => true } do |f|
  - if @worker.errors.any?
    #error_explanation
      %h2= "#{pluralize(@worker.errors.count, "error")} prohibited this worker from being saved:"
      %ul
        - @worker.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.file_field :photo
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :job
    = f.text_field :job
  .field
    = f.label :phone
    = f.text_field :phone
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :skype
    = f.text_field :skype
  .field
    = f.label :region
    = f.text_field :region
  .field
    = f.label :locale
    = f.text_field :locale
  .actions
    = f.submit 'Save'
